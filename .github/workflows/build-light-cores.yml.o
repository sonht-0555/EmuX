name: Build Light Cores (GBC and SNES)

on:
  push:
    paths:
      - '.github/workflows/build-light-cores.yml'
  workflow_dispatch:

jobs:
  build-gbc:
    runs-on: ubuntu-latest
    steps:
    - name: Checkout EmuX & Setup Emscripten
      uses: actions/checkout@v3
      with:
        path: emux
    - uses: mymindstorm/setup-emsdk@v14
      with:
        version: 3.1.46
    - name: Fetch and Build Gambatte Core
      run: |
        git clone --depth 1 https://github.com/libretro/gambatte-libretro.git
        cd gambatte-libretro
        # Ép core tự build các util bằng STATIC_LINKING=0
        emmake make -f Makefile.libretro platform=emscripten -j$(nproc) STATIC_LINKING=0
        
        # Thu thập toàn bộ objects (bao gồm libretro-common)
        ALL_OBJS=$(find . -name "*.o")
        
        # Link sang JS/WASM
        emcc $ALL_OBJS -O3 -flto -DNDEBUG -s WASM=1 -s USE_ZLIB=1 -s ENVIRONMENT=web \
          -s ALLOW_MEMORY_GROWTH=1 -s ALLOW_TABLE_GROWTH=1 -s INITIAL_MEMORY=64mb -s STACK_SIZE=4mb \
          -s EXPORTED_RUNTIME_METHODS='["addFunction","FS","stringToUTF8","UTF8ToString","ccall","cwrap"]' \
          -s EXPORTED_FUNCTIONS='["_retro_init","_retro_run","_retro_load_game","_retro_get_system_av_info","_retro_set_environment","_retro_set_video_refresh","_retro_set_audio_sample","_retro_set_audio_sample_batch","_retro_set_input_poll","_retro_set_input_state","_malloc","_free"]' \
          -o gbc.js
        zip -j gbc.zip gbc.{js,wasm}
    - uses: actions/upload-artifact@v4
      with:
        name: gbc-core
        path: gambatte-libretro/gbc.zip

  build-snes-light:
    runs-on: ubuntu-latest
    steps:
    - name: Checkout EmuX & Setup Emscripten
      uses: actions/checkout@v3
      with:
        path: emux
    - uses: mymindstorm/setup-emsdk@v14
      with:
        version: 3.1.46
    - name: Fetch and Build SNES9x 2010 Core
      run: |
        git clone --depth 1 https://github.com/libretro/snes9x2010.git
        cd snes9x2010
        # Tương tự cho SNES9x 2010
        emmake make -f Makefile.libretro platform=emscripten -j$(nproc) STATIC_LINKING=0
        
        ALL_OBJS=$(find . -name "*.o")
        
        # Link sang JS/WASM
        emcc $ALL_OBJS -O3 -flto -DNDEBUG -s WASM=1 -s USE_ZLIB=1 -s ENVIRONMENT=web \
          -s ALLOW_MEMORY_GROWTH=1 -s ALLOW_TABLE_GROWTH=1 -s INITIAL_MEMORY=128mb -s STACK_SIZE=4mb \
          -s EXPORTED_RUNTIME_METHODS='["addFunction","FS","stringToUTF8","UTF8ToString","ccall","cwrap"]' \
          -s EXPORTED_FUNCTIONS='["_retro_init","_retro_run","_retro_load_game","_retro_get_system_av_info","_retro_set_environment","_retro_set_video_refresh","_retro_set_audio_sample","_retro_set_audio_sample_batch","_retro_set_input_poll","_retro_set_input_state","_malloc","_free"]' \
          -o snes_light.js
        zip -j snes_light.zip snes_light.{js,wasm}
    - uses: actions/upload-artifact@v4
      with:
        name: snes-light-core
        path: snes9x2010/snes_light.zip
